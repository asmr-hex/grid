<?xml version="1.0"?>
<Interface name="anemone"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="/grid/schema.xsd">

  <Outputs>
    <Midi name="audiobox" device="AudioBox USB 96"/>
    <Midi name="audiobox1" device="AudioBox USB 99"/>
    <Voltage name="cv1" port="A"/>
    <Osc name="osc1" host="localhost" port="8080"/>
  </Outputs>

  <Instruments>
    <Instrument name="ER1">
      <Parameter name="delayDepth">
        <Control>
          <Midi output="audiobox" channel="10" arg="value">
            <Message>
              <Byte>175 + ${channel}</Byte>
              <Byte>98</Byte>
              <Byte>101</Byte>
            </Message>
            <Message>
              <Byte>175 + ${channel}</Byte>
              <Byte>99</Byte>
              <Byte>2</Byte>
            </Message>
            <Message>
              <Byte>175 + ${channel}</Byte>
              <Byte>6</Byte>
              <Byte>${value}</Byte>
            </Message>
          </Midi>
          <Voltage output="cv1"/>
          <Osc output="osc1"/>
        </Control>
      </Parameter>

      <Voice name="oscillator1">
        <Control>
          <Midi note="all" output="audiobox" channel="10"/>
          <Voltage output="cv1"/>
        </Control>
      </Voice>
    </Instrument>
  </Instruments>

  <ControlSurfaces>
      <Grid name="monome" type="monome" device="/dev/ttyUSB0">
          <Dimensions width="16" height="8"/>
          <Layouts>
          </Layouts>
      </Grid>

  </ControlSurfaces>

</Interface>
